#!/usr/bin/env python

import sys, os
scriptPath = os.path.dirname(os.path.realpath(__file__))
sys.path.append(scriptPath + os.sep + 'lib')
from tiddlywiki import TiddlyWiki

def usage():
	print 'usage: untwee source'
	
	
def main (argv):
	if len(argv) == 0:
		usage()
		sys.exit(2)

	file = open(argv[0])
	tw = TiddlyWiki()
	data = file.read()
	# print data
	tw.addHtml(data)
	print tw.toTwee()
	

if __name__ == '__main__':
	main(sys.argv[1:])
